<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#458b00"
    android:orientation="vertical"
    tools:context=".Advanced">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f8ff"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/count_equals"

            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/running_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/count"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/running_count_equals"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/number_of_decks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/running_count"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/remaining_decks_equals"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/set_decks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/number_of_decks"
            android:layout_centerHorizontal="true"
            android:onClick="selectDeckAdvanced"
            android:text="@string/set_number_of_decks" />

        <Button
            android:id="@+id/reset_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/set_decks"
            android:layout_alignBaseline="@+id/set_decks"
            android:layout_centerHorizontal="true"

            android:layout_toEndOf="@id/set_decks"
            android:text="@string/reset_count" />

        <Button
            android:id="@+id/menu"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/set_decks"
            android:layout_alignBaseline="@+id/set_decks"
            android:layout_centerHorizontal="true"
            android:layout_toStartOf="@id/set_decks"
            android:onClick="goToMenu"
            android:text="@string/menu" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/deck_number_selection_advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">


        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/one_deck_advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one_deck" />

            <RadioButton
                android:id="@+id/two_decks_advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two_decks" />
        </RadioGroup>

        <TextView
            android:id="@+id/done_advanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:onClick="doneAdvanced"
            android:text="@string/done" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
